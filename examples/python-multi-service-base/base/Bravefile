base:
  image: alpine/3.16
  location: public

packages:
  manager: apk
  system:
    - python3
    - py3-pip

copy:
  - source: requirements.txt
    target: /root/

run:
  - command: python3
    args:
      - -m
      - pip
      - install
      - -r
      - requirements.txt

service:
  image: python-base-1.0
  name: python-base
  version: 1.0
