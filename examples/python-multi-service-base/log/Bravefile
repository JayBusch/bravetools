base:
  image: python-base-1.0
  location: local

copy:
  - source: app.py
    target: /root/

service:
  postdeploy:
    run:
      - command: sh
        args:
          - -c
          - gunicorn app:app --bind 0.0.0.0:8000 --daemon

  image: python-log-1.0
  name: python-log
  version: 1.0
  ip: 10.0.0.25
  resources:
    ram: 500MB
    cpu: 1
